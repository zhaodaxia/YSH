<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dl"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/sc_02"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <!-- <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/gh_03" /> -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/back_iv"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="我的"
            android:textSize="16sp" />
    </RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
       	android:layout_height="130dp"
       	android:background="@drawable/wd_02"
       	android:orientation="vertical">

		<LinearLayout
		    android:layout_marginTop="20dp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		    <TextView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:padding="5dp"
	            android:gravity="center"
	            android:hint="欢迎回来！"
	            android:singleLine="true"
	            android:textColor="#FFFFFF"
	            android:textColorHint="#FFFFFF"
	            android:textSize="15sp" />
		    
		</LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="5dp" >
		     <TextView
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:gravity="right"
	            android:singleLine="true"
	            android:text="账号："
	            android:textColor="#FFFFFF"
	            android:textColorHint="#FFFFFF"
	            android:textSize="15sp" />
		    <TextView
	            android:id="@+id/ed_login_phone"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:text="15669323594"
	            android:textColor="#FFFFFF"
	            android:textColorHint="#FFFFFF"
	            android:layout_gravity="center"
	            android:textSize="16sp" />
		</LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:padding="5dp"  >
		    <TextView
		        
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:gravity="right"
	            android:singleLine="true"
	            android:text="ID："
	            android:textColor="#FFFFFF"
	            android:textColorHint="#FFFFFF"
	            android:textSize="15sp" />
		    
		    <TextView
	            android:id="@+id/ed_login_id"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:text="458784"
	            android:textColor="#FFFFFF"
	            android:textColorHint="#FFFFFF"
	            android:layout_gravity="center"
	            android:textSize="16sp" />
		</LinearLayout>
	    
     </LinearLayout>
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/mycontent_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ziliao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2.5dp"
                android:src="@drawable/wd_09" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:text="我的资料"
                android:layout_marginTop="5dp"
                android:textColor="#F2039C"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_changepassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/xgmma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2.5dp"
                android:src="@drawable/wd_19" />

            <TextView
                
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                 android:layout_marginTop="5dp"
                android:text="修改密码"
                android:textColor="#F2039C"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/yijfk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2.5dp"
                android:src="@drawable/wd_20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                 android:layout_marginTop="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="意见反馈"
                android:textColor="#F2039C"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/flou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2.5dp"
            android:src="@drawable/wd_28" />

        <TextView
           
             android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:text="退出登录"
            android:textColor="#f5f5f5"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>